<div class="panel visible-lg">
  <div class="panel-heading"><%= link_to "Nodes", nodes_path %></div>
  <table class="table table-condensed">
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.unresponsive.count %></span></td>
      <td><%= link_to "Unresponsive", unresponsive_nodes_path %></td>
    </tr>
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.failed.count %></span></td>
      <td><%= link_to "Failed", failed_nodes_path %></td>
    </tr>
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.pending.count %></span></td>
      <td><%= link_to "Pending", pending_nodes_path %></td>
    </tr>
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.changed.count %></span></td>
      <td><%= link_to "Changed", changed_nodes_path %></td>
    </tr>
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.unchanged.count %></span></td>
      <td><%= link_to "Unchanged", unchanged_nodes_path %></td>
    </tr>
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.unreported.count %></span></td>
      <td><%= link_to "Unreported", unreported_nodes_path %></td>
    </tr>
    <tr>
      <td style="text-align: right"><span class="badge"><%= Node.count %></span></td>
      <td><%= link_to "All", nodes_path %></td>
    </tr>
  </table>
  <div class="panel-footer">
    <%= link_to "Add Node", new_node_path, :class => 'btn btn-primary btn-xs' %>
  </div>
</div>

<div class="panel visible-lg">
  <div class="panel-heading"><%= link_to "Group", node_groups_path %></div>
  <div class="panel-group">
  <table class="table table-condensed">
    <% NodeGroup.all.each do |node_group| %>
      <tr>
        <td><%= link_to node_group, node_group %></td>
        <td><span class="badge"><%= node_group.nodes.count %></span></td>
      </tr>
    <% end %>
  </table>
  </div>
  <div class="panel-footer">
    <%= link_to "Add Group", new_node_group_path, :class => 'btn btn-primary btn-xs' %>
  </div>
</div>

<div class="panel visible-lg">
  <div class="panel-heading"><%= link_to "Class", node_classes_path %></div>
  <div class="panel-group">
  <table class="table table-condensed">
    <% NodeClass.all.each do |node_class| %>
      <tr>
        <td><%= link_to node_class, node_class %></td>
        <td><span class="badge"><%= node_class.nodes.count %></span></td>
      </tr>
    <% end %>
  </table>
  </div>
  <div class="panel-footer">
    <%= link_to "Add Class", new_node_class_path, :class => 'btn btn-primary btn-xs' %>
  </div>
</div>
