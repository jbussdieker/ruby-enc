<div class="panel">
  <div class="panel-heading"><%= link_to "Nodes", nodes_path %></div>
  <table class="table table-condensed">
    <tr>
      <td><span class="badge"><%= Node.where("reported_at < '#{Time.now - 3600}'").count %></span></td>
      <td>Unresponsive</td>
    </tr>
    <tr>
      <td><span class="badge"><%= Node.where(:status => "failed").count %></span></td>
      <td>Failed</td>
    </tr>
    <tr>
      <td><span class="badge"><%= Node.where(:status => "pending").count %></span></td>
      <td>Pending</td>
    </tr>
    <tr>
      <td><span class="badge"><%= Node.where(:status => "changed").count %></span></td>
      <td>Changed</td>
    </tr>
    <tr>
      <td><span class="badge"><%= Node.where(:status => "unchanged").count %></span></td>
      <td>Unchanged</td>
    </tr>
    <tr>
      <td><span class="badge"><%= Node.where(:status => nil).count %></span></td>
      <td>Unreported</td>
    </tr>
    <tr>
      <td><span class="badge"><%= Node.count %></span></td>
      <td>All</td>
    </tr>
  </table>
  <%= link_to "Add Node", new_node_path, :class => 'btn btn-default' %>
</div>

<div class="panel">
  <div class="panel-heading"><%= link_to "Group", node_groups_path %></div>
  <div class="panel-group">
  <table class="table table-condensed">
    <% NodeGroup.all.each do |node_group| %>
      <tr>
        <td><%= link_to node_group.name, node_group %></td>
        <td><span class="badge"><%= node_group.nodes.count %></span></td>
      </tr>
    <% end %>
  </table>
  </div>
  <%= link_to "Add Group", new_node_group_path, :class => 'btn btn-default' %>
</div>

<div class="panel">
  <div class="panel-heading"><%= link_to "Class", node_classes_path %></div>
  <div class="panel-group">
  <table class="table table-condensed">
    <% NodeClass.all.each do |node_class| %>
      <tr>
        <td><%= link_to node_class.name, node_class %></td>
        <td><span class="badge"><%= node_class.nodes.count %></span></td>
      </tr>
    <% end %>
  </table>
  </div>
  <%= link_to "Add Class", new_node_class_path, :class => 'btn btn-default' %>
</div>
