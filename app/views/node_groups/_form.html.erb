<%= form_for(@node_group) do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <h4>Parameters</h4>
    <%= f.fields_for :parameters do |parameter_form| %>
      <%= parameter_form.text_field :key, :placeholder => "key" %>
      <%= parameter_form.text_field :value, :placeholder => "value" %>
      <br>
    <% end %>
  </div>

  <%= f.submit nil, :class => 'btn' %>
<% end %>
