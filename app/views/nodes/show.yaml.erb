---
classes:
<% @node.node_classes.each do |node_class| %>
- <%= node_class %>
<% end %>
name: <%= @node %>
parameters:
<% @node.parameters.each do |parameter| %>
  <%= parameter.key %>: <%= parameter.value %>
<% end %>
<% @node.node_groups.each do |node_group| %>
  <% node_group.parameters.each do |parameter| %>
  <%= parameter.key %>: <%= parameter.value %>
  <% end %>
<% end %>
