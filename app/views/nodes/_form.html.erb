<%= form_for(@node) do |f| %>
  <% if @node.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@node.errors.count, "error") %> prohibited this group from being saved:</h4>

      <ul>
      <% @node.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @node.persisted? %>
    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-lg-6">
          <%= f.text_field :name, :placeholder => 'Enter the node name here', :class => 'form-control' %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :name %>
      <%= @node %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 4, :class => 'form-control' %>
  </div>

  <div class="well well-sm">
    <%= f.label :parameters %>
    <%= f.fields_for :parameters do |builder| %>
      <%= render 'parameter_fields', :f => builder %>
    <% end %>

    <div>
      <%= link_to_add_fields "Add Parameter", f, :parameters %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :groups %>
        <%= f.fields_for :node_group_memberships do |group_form| %>
          <div class="row">
            <div class="col-lg-8">
              <%= group_form.select :node_group_id, [nil] + NodeGroup.all.collect{|c| [c.name,c.id]}, {}, :class => 'form-control' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="form-group">
        <%= f.label :classes %>
        <%= f.fields_for :node_class_memberships do |class_form| %>
          <div class="row">
            <div class="col-lg-8">
              <%= class_form.select :node_class_id, [nil] + NodeClass.all.collect{|c| [c.name,c.id]}, {}, :class => 'form-control' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="panel-footer">
    <%= f.submit nil, :class => 'btn btn-sm btn-primary' %>
    <%= link_to "Cancel", @node, :class => 'btn btn-sm btn-default' %>
  </div>
<% end %>
