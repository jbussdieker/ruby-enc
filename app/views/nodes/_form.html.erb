<%= form_for(@node) do |f| %>
  <% if @node.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@node.errors.count, "error") %> prohibited this group from being saved:</h4>

      <ul>
      <% @node.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% unless @node.persisted? %>
    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-lg-6">
          <%= f.text_field :name, :placeholder => 'Enter the node name here', :class => 'form-control' %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :name %>
      <%= @node %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 4, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :parameters %>
    <%= f.fields_for :parameters do |parameter_form| %>
      <div class="row">
        <div class="col-lg-2">
          <%= parameter_form.text_field :key, :placeholder => "key", :class => 'form-control' %>
        </div>
        <div class="col-lg-8">
          <%= parameter_form.text_field :value, :placeholder => "value", :class => 'form-control' %>
        </div>
      </div>
      <br>
    <% end %>
  </div>

  <%= f.submit nil, :class => 'btn btn-sm btn-primary' %>
  <%= link_to "Cancel", @node, :class => 'btn btn-sm btn-default' %>
<% end %>
