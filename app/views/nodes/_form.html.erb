<%= form_for(@node) do |f| %>
  <% unless @node.persisted? %>
    <div class="form-group">
      <%= f.label :name %>
      <div class="row">
        <div class="col-lg-6">
          <%= f.text_field :name, :placeholder => 'Enter the node name here', :class => 'form-control' %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :name %>
      <%= @node.name %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :rows => 4, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <h4>Parameters</h4>
    <%= f.fields_for :parameters do |parameter_form| %>
      <div class="row">
        <div class="col-lg-2">
          <%= parameter_form.text_field :key, :placeholder => "key", :class => 'form-control' %>
        </div>
        <div class="col-lg-8">
          <%= parameter_form.text_field :value, :placeholder => "value", :class => 'form-control' %>
        </div>
      </div>
    <% end %>
  </div>

  <%= f.submit nil, :class => 'btn' %>
<% end %>
