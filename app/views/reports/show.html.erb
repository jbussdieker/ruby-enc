<div class="btn-toolbar">
  <%= link_to "Back", node_path(@report.node), :class => 'btn' %>
</div>

<div class="tabbable">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#metrics" data-toggle="tab">Metrics</a></li>
    <li><a href="#log" data-toggle="tab">Log</a></li>
    <li><a href="#events" data-toggle="tab">Events</a></li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane active" id="metrics">
      <% @report.parsed.metrics.each do |name,metric| %>
        <table class="table table-bordered table-condensed">
          <tr><th><%= metric.label %></th></tr>
          <% metric.values.each do |key,description,value| %>
            <tr>
              <td><%= description %></td>
              <td><%= value %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
    <div class="tab-pane" id="log">
      <table class="table table-bordered">
        <% @report.parsed.logs.each do |log| %>
          <tr>
            <td><%= log.time %></td>
            <td><%= log.level %></td>
            <td><%= log.message %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="tab-pane" id="events">
      <table class="table table-bordered">
        <% @report.parsed.resource_statuses.each do |name,status| %>
        <tr>
          <td><%= name %></td>
          <td><%= status.changed %></td>
          <td><%= status.skipped %></td>
          <td><%= status.failed %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
