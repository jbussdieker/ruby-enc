<div class="panel">
  <div class="panel-heading">Reports</div>
  <div class="panel-body">
    <%= column_chart report_history_reports_path %>

    <div id="paginator">
      <%= paginate @reports, :remote => true %>
    </div>

    <table class="table table-bordered table-condensed table-striped">
      <thead>
        <tr>
          <th>Reported at</th>
          <th>Node</th>
          <th>Environment</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody id="reports">
        <%= render @reports %>
      </tbody>
    </table>
  </div>
</div>
